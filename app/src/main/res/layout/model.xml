<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_margin="5dp"
    card_view:cardCornerRadius="10dp"
    card_view:cardElevation="8dp"

    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_width="150dp">

    <RelativeLayout
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_gravity="center">

        <ImageView
            android:layout_width="97dp"
            android:layout_height="97dp"
            android:id="@+id/spacecraftImage"
            android:src="@drawable/pierna"
            android:scaleType="centerCrop"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Sentadilla libre"
            android:id="@+id/nameTxt"
            android:textColor="@color/accent"
            android:layout_gravity="center"
            android:layout_alignTop="@+id/spacecraftImage"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textSize="18sp"
            android:shadowColor="#000"
            android:shadowRadius="1"
            android:textAlignment="center"
            android:breakStrategy="simple"
            android:fontFamily="sans-serif-smallcaps" />


    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="4s de 6,6,8,8"
        android:id="@+id/txtSeries"
        android:textColor="@color/accent"
        android:layout_gravity="bottom|center"
        android:textSize="18sp"
        android:shadowColor="#000"
        android:shadowRadius="1"
        android:textAlignment="center"
        android:layout_alignBottom="@+id/spacecraftImage"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:fontFamily="sans-serif-smallcaps" />

</android.support.v7.widget.CardView>