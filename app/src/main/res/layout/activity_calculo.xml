<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_calculo"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:context="com.example.alexis.proyecto.Calculo"
    android:weightSum="1"

    android:layout_gravity="center"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:text="Calcular Plan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView23"
                android:layout_gravity="center"
                android:textStyle="normal|bold"
                android:textSize="30sp"
                android:textColor="@color/primary_dark" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginRight="5dp">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:text="Altura:"
                            android:layout_height="wrap_content"
                            android:id="@+id/textView12"
                            android:textStyle="normal|bold"
                            android:textSize="18sp"
                            android:layout_width="64dp"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentTop="true"
                            android:layout_gravity="center" />

                        <android.support.design.widget.TextInputLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                        <EditText
                            android:layout_height="wrap_content"
                            android:inputType="numberDecimal"
                            android:ems="10"
                            android:id="@+id/edtAltura"
                            android:hint="(cm)"
                            android:textSize="14sp"
                            android:layout_width="120dp" />
                        </android.support.design.widget.TextInputLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:text="Peso:"
                            android:layout_height="wrap_content"
                            android:id="@+id/textView18"
                            android:textStyle="normal|bold"
                            android:textSize="18sp"
                            android:layout_width="64dp"
                            android:layout_gravity="center" />

                        <android.support.design.widget.TextInputLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">


                        <EditText
                            android:layout_height="wrap_content"
                            android:inputType="numberDecimal"
                            android:ems="10"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentEnd="true"
                            android:id="@+id/edtPeso"
                            android:hint="(kg)"
                            android:textSize="14sp"
                            android:layout_width="120dp" />
                        </android.support.design.widget.TextInputLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <TextView
                            android:text="Edad:"
                            android:layout_height="wrap_content"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true"
                            android:id="@+id/textView25"
                            android:textStyle="normal|bold"
                            android:textSize="18sp"

                            android:layout_width="64dp"
                            android:layout_gravity="center" />

                        <android.support.design.widget.TextInputLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">


                            <EditText
                                android:layout_height="wrap_content"
                                android:inputType="number"
                                android:ems="10"
                                android:layout_alignParentTop="true"
                                android:layout_alignParentRight="true"
                                android:layout_alignParentEnd="true"
                                android:id="@+id/edtEdad"
                                android:hint="Años"
                                android:textSize="14sp"
                                android:layout_width="120dp"
                                />
                        </android.support.design.widget.TextInputLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:text="Cintura:"
                            android:layout_height="wrap_content"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true"
                            android:id="@+id/textView19"
                            android:textStyle="normal|bold"
                            android:textSize="18sp"
                            android:layout_width="64dp"
                            android:layout_gravity="center" />

                        <android.support.design.widget.TextInputLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                        <EditText
                            android:layout_height="wrap_content"
                            android:inputType="numberDecimal"
                            android:ems="10"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentEnd="true"
                            android:id="@+id/edtCintura"
                            android:hint="(cm)"

                            android:textSize="14sp"
                            android:layout_width="120dp" />
                        </android.support.design.widget.TextInputLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:text="Cuello:"
                            android:layout_height="wrap_content"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true"
                            android:id="@+id/textView20"
                            android:textStyle="normal|bold"
                            android:textSize="18sp"
                            android:layout_weight="1"
                            android:layout_width="64dp"
                            android:layout_gravity="center" />
                        <android.support.design.widget.TextInputLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                        <EditText
                            android:layout_height="wrap_content"
                            android:inputType="numberDecimal"
                            android:ems="10"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentEnd="true"
                            android:id="@+id/edtCuello"
                            android:hint="(cm)"
                            android:textSize="14sp"
                            android:layout_width="120dp" />
                        </android.support.design.widget.TextInputLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:text="Cadera:"
                            android:layout_height="wrap_content"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true"
                            android:textStyle="normal|bold"
                            android:textSize="18sp"
                            android:layout_weight="1"
                            android:id="@+id/txtCadera"
                            android:layout_width="64dp"
                            android:layout_gravity="center" />
                        <android.support.design.widget.TextInputLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                        <EditText
                            android:layout_height="wrap_content"
                            android:inputType="numberDecimal"
                            android:ems="10"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentEnd="true"
                            android:id="@+id/edtCadera"
                            android:hint="Mujeres(cm)"
                            android:textSize="14sp"
                            android:layout_width="120dp" />
                    </android.support.design.widget.TextInputLayout>

                    </LinearLayout>
                </LinearLayout>

                <RadioGroup
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:id="@+id/rgSexo"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp">

                    <TextView
                        android:text="Género:"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView22"
                        android:layout_weight="1"
                        android:layout_gravity="center" />

                    <RadioButton
                        android:text="Hombre"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/rbHombre"
                        android:layout_weight="1"
                        android:checked="true" />

                    <RadioButton
                        android:text="Mujer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/rbMujer"
                        android:layout_weight="1" />
                </RadioGroup>

            </LinearLayout>

            <TextView
                android:text="Actividad Física"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView24"
                android:textStyle="normal|bold"
                android:textSize="20dp"
                android:textColor="@color/primary_text"
                android:layout_marginTop="10dp" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center">

                <RadioGroup
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/rgActividad">

                    <RadioButton
                        android:text="Poco/Ninguno"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/rbPocoNinguno"
                        android:layout_weight="1"
                        android:checked="true" />

                    <RadioButton
                        android:text="Ligero(1-3 días x Semana)"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/rbLigero"
                        android:layout_weight="1" />

                    <RadioButton
                        android:text="Moderado(3-5 días a la semana)"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/rbModerado"
                        android:layout_weight="1" />

                    <RadioButton
                        android:text="Fuerte (6-7 días a la semana)"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/rbFuerte"
                        android:layout_weight="1" />

                </RadioGroup>

            </LinearLayout>

            <Button
                android:text="Calcular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btnCalcular"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:onClick="onClickCalculo"
                android:background="@drawable/botonlogin"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>
